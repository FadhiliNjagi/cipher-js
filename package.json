{
  "name": "symmetric-cipher.js",
  "version": "2.0.0dev",
  "description": "A lightweight library meant for encrypting and decrypting strings",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "build": "yarn build:esm && yarn build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:test": "tsc --project tsconfig.cjs.test.json && tsc --project tsconfig.esm.test.json",
    "test": "jest",
    "test:esm": "mocha dist/esm/test.js",
    "lint": "eslint *.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint"
  },
  "files": [
    "dist",
    "README.md",
    "HISTORY.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FadhiliNjagi/cipher-js.git"
  },
  "keywords": [
    "symmetric",
    "encryption",
    "decryption"
  ],
  "author": "Fadhili Njagi (FadhiliNjagi)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FadhiliNjagi/cipher-js/issues"
  },
  "homepage": "https://github.com/FadhiliNjagi/cipher-js#readme",
  "devDependencies": {
    "@types/buffer-from": "^1.1.0",
    "@types/jest": "^29.5.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.10",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^29.5.0",
    "mocha": "^10.2.0",
    "ts-jest": "^29.1.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "buffer-from": "^1.1.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
